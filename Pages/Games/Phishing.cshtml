@page
@model CyberGamify.Pages.Games.PhishingModel
@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Phishing Challenge";
}

<h2>Phishing Challenge</h2>
<p>Identify which emails are phishing. Correct = +10, wrong = -5.</p>

<!-- Render antiforgery token so JS can include it if needed -->
<form id="antiForgeryForm">@Html.AntiForgeryToken()</form>

<div id="emailsContainer" class="mt-3"></div>

<div class="mt-3">
    <strong>Your Score:</strong> <span id="score">0</span>
</div>

<button id="submitScoreBtn" class="btn btn-primary mt-3">Submit Score</button>

@section Scripts {
    <script src="~/js/phishing.js"></script>
}
